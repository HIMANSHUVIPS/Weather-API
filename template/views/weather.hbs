</head>
<body>
    {{>navbar}}
    {{!-- <div class="weather_img">
        <i class="fa-solid fa-cloud-rain"></i>
    </div> --}}
    {{!-- search bar --}}

    <section class="container">
        <form onsubmit="submitFn(this, event);">
            <div class="search-wrapper">
                <div class="input-holder">
                    <input type="text" class="search-input" id="cityName" placeholder="Type to search" />
                    <button type="submit" class="search-icon" id="submitBtn" onclick="searchToggle(this, event);"><span></span></button>
                </div>
                <span class="close" onclick="searchToggle(this, event);"></span>
                <div class="result-container">
                </div>
            </div>
        </form>
    </section>

    {{!-- CONTENT --}}
    <p id="error"></p>
    <div class="main" 'hide'>
        <div class="state" id="cityName_val">Assam</div>
        <div class="temp" id="temp_info">28<span id="temp_degree">&deg;C</span></div>
        <div class="feel">
            <div class="feel_like" id="feel_like">Feels like</div>
            <div class="deg" id="feel_deg">28<span id="feel_degree">&deg;C</span></div>
        </div>
        <div class="weather" id="weather">Rain</div>
        <div class="humidity">
            <div class="feel_like" id="humidity">Humidity</div>
            <div class="deg" id="humiID">66%</div>
        </div>
    </div>
    <script src="http://libs.useso.com/js/jquery/1.11.0/jquery.min.js" type="text/javascript"></script>
    <script>window.jQuery || document.write('<script src="js/jquery-1.11.0.min.js"><\/script>')</script>
</body>

